#!/bin/bash

mkdir .config

# scripts
cp -rf -r ~/bin ./

# bspwm
mkdir ./.config/bspwm
cp -rf ~/.config/bspwm/bspwmrc ./.config/bspwm/

# mpd
mkdir ./.config/mpd
cp -rf ~/.config/mpd/mpd.conf ./.config/mpd/

# compton
cp -rf ~/.config/compton.conf ./.config/

# dunst
mkdir ./.config/dunst
cp -rf ~/.config/dunst/dunstrc ./.config/dunst/

# feh
cp -rf ~/.fehbg ./

# gtk 2.0
cp -rf ~/.gtkrc-2.0 ./

# gtk 3.0
mkdir ./.config/gtk-3.0
cp -rf ~/.config/gtk-3.0/settings.ini ./.config/gtk-3.0/

# htop
mkdir ./.config/htop
cp -rf ~/.config/htop/htoprc ./.config/htop/

# khal
mkdir ./.config/khal
cp -rf ~/.config/khal/config ./.config/khal/

# khard
mkdir ./.config/khard
cp -rf ~/.config/khard/khard.conf ./.config/khard/

# mpv
mkdir ./.config/mpv
cp -rf ~/.config/mpv/input.conf ./.config/mpv/
cp -rf ~/.config/mpv/mpv.conf ./.config/mpv/

# mutt
mkdir .mutt
cp -rf ~/.mutt/muttrc ./.mutt/
cp -rf ~/.mutt/mailcap ./.mutt/

# ncmpcpp
mkdir ./.ncmpcpp
cp -rf ~/.ncmpcpp/config ./.ncmpcpp/

# neovim
mkdir ./.config/nvim
cp -rf ~/.config/nvim/init.vim ./.config/nvim/

# newsboat
mkdir ./.config/newsboat
cp -rf ~/.config/newsboat/config ./.config/newsboat/
cp -rf ~/.config/newsboat/urls ./.config/newsboat/

# polybar
mkdir ./.config/polybar
cp -rf ~/.config/polybar/config ./.config/polybar/

# ranger
mkdir ./.config/ranger
cp -rf ~/.config/ranger/rc.conf ./.config/ranger/
cp -rf ~/.config/ranger/rifle.conf ./.config/ranger/
mkdir ./.config/ranger/colorschemes
cp -rf ~/.config/ranger/colorschemes/gruvbox.py ./.config/ranger/colorschemes/

# rofi
mkdir ./.config/rofi
cp -rf ~/.config/rofi/config.rasi ./.config/rofi/
cp -rf ~/.config/rofi/gruvbox.rasi ./.config/rofi/

# sxhkd
mkdir ./.config/sxhkd
cp -rf ~/.config/sxhkd/sxhkdrc ./.config/sxhkd/

# tmux
cp -rf ~/.tmux.conf ./

# wallpaper
mkdir .wallpaper
cp -rf ~/.wallpaper/lightgrass.jpg ./.wallpaper/

# xinit
cp -rf ~/.xinitrc ./

# xmodmap
cp ~/.config/xmodmap ./.config/

# X resources
cp -rf ~/.Xresources ./

# zathura
mkdir ./.config/zathura
cp -rf ~/.config/zathura/zathurarc ./.config/zathura/

# zsh
cp -rf ~/.zprofile ./
cp -rf ~/.zshenv ./
cp -rf ~/.zshrc ./
